%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title FreshServe - A ThemeForest Theme
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "", :name => "description"}/
    = stylesheet_link_tag 'styles'
    = stylesheet_link_tag 'jquery.fancybox-1.3.1'
    = stylesheet_link_tag 'blue-green'
    %script{:src => "/javascripts/jquery.js", :type => "text/javascript"}
    %script{:src => "/javascripts/jquery.tools.js", :type => "text/javascript"}
    %script{:src => "/javascripts/fancybox/jquery.fancybox-1.3.1.pack.js", :type => "text/javascript"}
    %script{:src => "/javascripts/site.js", :type => "text/javascript"}
    %script{:src => "/javascripts/demo.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :type => "text/javascript"}
      $(document).ready(function() {
      \// Configure fancybox plugin
      $("a.screenshot").fancybox({
      'transitionIn'	:	'elastic',
      'transitionOut'	:	'elastic',
      'speedIn'		:	400,
      'speedOut'		:	400,
      'overlayShow'	:	false
      });
      
      \// Configure scrollable plugin
      $(".scrollable").scrollable({ });
      });
  %body
    #header
      .page
        %a.logo{:href => "/"} HappyCMS
        %ul
          %li.active
            %a{:href => "index.html"} Home
          %li
            %a{:href => "about.html"} About
          %li
            %a{:href => "tour.html"} Tour
          %li
            %a{:href => "pricing.html"} Pricing
          %li
            %a{:href => "blog.html"} Blog
          %li
            %a{:href => "contact.html"} Contact
        .clear
    #page
      .top
      .content
        .header.header_blog.page
          .info
            %h1 Account Dashboard
        #home.padding
          = yield
          .clear
      .bottom
    #footer.page
      %p Copyright CharmBoost 2010.
      %ul
        %li
          %a{:href => "index.html"} Home
        %li
          %a{:href => "about.html"} About
        %li
          %a{:href => "tour.html"} Tour
        %li
          %a{:href => "pricing.html"} Pricing
        %li
          %a{:href => "blog.html"} Blog
        %li
          %a{:href => "contact.html"} Contact
      .clear
